#!/usr/bin/make -f
%:
ifneq ($(shell dh -l | grep -xF translations),)
	dh $@ --with python2,translations
else
	dh $@ --with python2
endif

override_dh_auto_install:
	dh_auto_install -- --install-scripts=/opt/extras.ubuntu.com/gnomeread                 --install-data=/opt/extras.ubuntu.com/gnomeread                 --install-lib=/opt/extras.ubuntu.com/gnomeread

override_dh_python2:
	dh_python2 /opt/extras.ubuntu.com/gnomeread


override_dh_install:
	dh_install
	mkdir -p debian/gnomeread/opt/extras.ubuntu.com/gnomeread/bin
	if [ -x debian/gnomeread/opt/extras.ubuntu.com/gnomeread/gnomeread/gnomeread ]; then mv debian/gnomeread/opt/extras.ubuntu.com/gnomeread/gnomeread/gnomeread debian/gnomeread/opt/extras.ubuntu.com/gnomeread/bin; fi
	if [ -f debian/gnomeread/opt/extras.ubuntu.com/gnomeread/share/applications/gnomeread.desktop ]; then \
		mkdir -p debian/gnomeread/usr/share/applications; \
		mv debian/gnomeread/opt/extras.ubuntu.com/gnomeread/share/applications/gnomeread.desktop debian/gnomeread/usr/share/applications/extras-gnomeread.desktop; \
		rmdir --ignore-fail-on-non-empty debian/gnomeread/opt/extras.ubuntu.com/gnomeread/share/applications; \
		sed -i 's|Exec=.*|Exec=/opt/extras.ubuntu.com/gnomeread/bin/gnomeread|' debian/gnomeread/usr/share/applications/extras-gnomeread.desktop; \
		sed -i 's|Icon=/usr/|Icon=/opt/extras.ubuntu.com/gnomeread/|' debian/gnomeread/usr/share/applications/extras-gnomeread.desktop; \
	fi
	grep -RlZ 'import gettext' debian/gnomeread/* | xargs -0 -r sed -i 's|\(import\) gettext$$|\1 locale|'
	grep -RlZ 'from gettext import gettext as _' debian/gnomeread/* | xargs -0 -r sed -i 's|from gettext \(import gettext as _\)|from locale \1|'
	grep -RlZ "gettext.textdomain('gnomeread')" debian/gnomeread/* | xargs -0 -r sed -i "s|gettext\(\.textdomain('gnomeread')\)|locale\.bindtextdomain('gnomeread', '/opt/extras.ubuntu.com/gnomeread/share/locale')\nlocale\1|" 
	sed -i "s|__gnomeread_data_directory__ =.*|__gnomeread_data_directory__ = '/opt/extras.ubuntu.com/gnomeread/share/gnomeread/'|" debian/gnomeread/opt/extras.ubuntu.com/gnomeread/gnomeread*/gnomereadconfig.py
	sed -i 's|        sys.path.insert(0, opt_path)|\0\n    os.putenv("XDG_DATA_DIRS", "%s:%s" % ("/opt/extras.ubuntu.com/gnomeread/share/", os.getenv("XDG_DATA_DIRS", "")))|' debian/gnomeread/opt/extras.ubuntu.com/gnomeread/bin/gnomeread
	if [ -d debian/gnomeread/opt/extras.ubuntu.com/gnomeread/share/glib-2.0/schemas ]; then glib-compile-schemas debian/gnomeread/opt/extras.ubuntu.com/gnomeread/share/glib-2.0/schemas; fi
